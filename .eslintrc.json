{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb",
    "prettier",
    "plugin:node/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "no-console": "off",
    "prettier/prettier": "error",
    "func-names": "off",
    "no-param-reassign": "off",
    "no-unused-vars": "error",
    "no-plusplus": "off",
    "object-shorthand": "off",
    "no-continue": "off",
    "no-use-before-define": "off",
    "prefer-const": "warn",
    "no-restricted-syntax": "off",
    "yoda": "warn",
    "no-else-return": ["error", { "allowElseIf": false }],
    "curly": "error"
  }
}
