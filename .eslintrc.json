{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb",
    "prettier",
    "plugin:node/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "no-console": 0,
    "prettier/prettier": "error",
    "func-names": "off",
    "no-param-reassign": "off",
    "no-unused-vars": "error",
    "no-plusplus": "off",
    "object-shorthand": "off",
    "no-continue": "off",
    "no-use-before-define": "off"
  }
}
